@{
    ViewData["Title"] = "TrainFormats";
}
@section Styles
{
    <link rel="stylesheet" href="~/css/Training/Training_General.css" asp-append-version="true" />
}
@section Scripts
{
    <script src="~/js/Training/Training_General.js" asp-append-version="true"></script>
    <script src="~/js/Training/Formats.js" asp-append-version="true"></script>
}
<div class="form-container">
    <form id="mainForm">
        <div class="form-group">
            <label for="inputField">Input:</label>
            <input type="text" id="inputField" name="input" required>
        </div>

        <div class="form-group output-container" id="outputFields">
            <label for="outputField">Emotions:</label>
            <div class="output-field">
                <input type="text" name="Emotions[]" placeholder="Enter value" required>
            </div>
        </div>
        <button type="button" id="appendOutput">Add Emotion</button>
 
        <div class="form-group">
            <label for="formatField">Format:</label>
            <input type="text" id="formatField" name="format" required>
        </div>



        <button type="submit">Submit</button>
    </form>
</div>
